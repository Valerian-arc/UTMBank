@model Core.Models.CardModels.UpsertCardModel

@{
    ViewBag.Title = "Edit Card";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .card-purple-header {
        background-color: #6f42c1; /* Bootstrap purple */
        color: white;
        padding: 1rem;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        text-align: center;
        font-weight: bold;
        font-size: 1.5rem;
    }

    .btn-purple {
        background-color: #6f42c1;
        color: white;
        border: none;
    }

        .btn-purple:hover {
            background-color: #5a32a3;
        }

    .btn-outline-light-purple {
        border: 1px solid #d6b3ff;
        color: #6f42c1;
    }

        .btn-outline-light-purple:hover {
            background-color: #f3e8ff;
            border-color: #b67aff;
        }

    .form-label {
        font-weight: bold;
        color: #4b2e83;
    }

    .form-control:focus {
        border-color: #b67aff;
        box-shadow: 0 0 0 0.2rem rgba(182, 122, 255, 0.25);
    }
</style>

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-lg rounded-4">
        <div class="card-purple-header">Edit Card</div>
        <div class="card-body p-4">
            @using (Html.BeginForm("Edit", "Card", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.Id)

                <!-- Card Name Field -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Enter card name" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <!-- Card Description Field -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-label" })
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Enter description", rows = 4 })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "Card")" class="btn btn-outline-light-purple">Cancel</a>
                    <button type="submit" class="btn btn-purple">Save Changes</button>
                </div>
            }
        </div>
    </div>
</div>
