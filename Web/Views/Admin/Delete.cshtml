@model Domain.Entites.User

@{
    ViewBag.Title = "Delete User";
}

<h2>Are you sure you want to delete @Model.FirstName @Model.LastName?</h2>

@using (Html.BeginForm("Delete", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Cancel</a>
}
