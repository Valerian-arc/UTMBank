@model IEnumerable<Domain.Entites.HistoryLog>

@{
    ViewBag.Title = "Card History";
}

<h2 class="text-center mb-4">Your Card History</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center">
        <strong>No history available.</strong>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Card ID</th>
                    <th>Action</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Source</td>
                        <td>@item.Destination</td>
                        <td>@item.Type</td>
                        <td>@item.Amount.ToString("C")</td> <!-- Formatting amount as currency -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
