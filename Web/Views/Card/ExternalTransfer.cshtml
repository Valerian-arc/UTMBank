@model Core.DTOs.Transfer.ExternalTransferDTO
@{
    ViewBag.Title = "External Transfer";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>External Transfer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .transfer-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .transfer-header {
            font-size: 22px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
            color: #28a745; /* Success Green */
        }

        .form-label {
            font-weight: 600;
            color: #495057;
        }

        .form-control {
            border-radius: 0.375rem;
            box-shadow: none;
        }

            .form-control:focus {
                border-color: #28a745;
                box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
            }

        .btn-success {
            width: 100%;
            border-radius: 0.375rem;
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .mb-3 {
            margin-bottom: 1.5rem;
        }

        .validation-summary-errors {
            color: #dc3545;
            font-weight: bold;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="transfer-container">
        <div class="transfer-header">External Transfer</div>

        @using (Html.BeginForm("ExternalTransfer", "Card", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

            <div class="mb-3">
                @Html.LabelFor(m => m.SourceCardId, "Select Source Card", new { @class = "form-label" })
                @Html.DropDownListFor(m => m.SourceCardId, new SelectList(Model.Cards, "Id", "Name"), "Select a Card", new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.SourceCardId, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Amount, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", placeholder = "Enter Amount" })
                @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.RecipientEmail, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.RecipientEmail, new { @class = "form-control", placeholder = "Enter Recipient Email" })
                @Html.ValidationMessageFor(m => m.RecipientEmail, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success">Confirm Transfer</button>
        }
    </div>
</body>
</html>
