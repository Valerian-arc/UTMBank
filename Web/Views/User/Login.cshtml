@model Core.Models.UserLogInViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<section>
    <!-- Jumbotron Section -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <!-- Left Text Section -->
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-4 fw-bold ls-tight">
                        Welcome Back! <br />
                        <span class="text-primary">Login to your account</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Login to access your dashboard and continue with your personal banking.
                    </p>
                </div>

                <!-- Right Form Section -->
                <div class="col-lg-6">
                    <div class="card shadow border-0">
                        <div class="card-body p-5">
                            @using (Html.BeginForm("Login", "User", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <h4 class="mb-4 text-center">Login</h4>

                                <!-- Email Input -->
                                <div class="mb-3">
                                    <label class="form-label">@Html.DisplayNameFor(m => m.Email)</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control w-100", type = "email" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>

                                <!-- Password Input -->
                                <div class="mb-3">
                                    <label class="form-label">@Html.DisplayNameFor(m => m.Password)</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control w-100" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>

                                <!-- Login Button -->
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        Login
                                    </button>
                                </div>

                                <!-- Divider -->
                                <hr class="my-4" />

                                <!-- Register Link -->
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("Register", "User")">
                                        Don't have an account? Create one now!
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron Section End -->
</section>
